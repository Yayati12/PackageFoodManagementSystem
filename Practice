2Ô∏è‚É£ ACCOUNT CONTROLLER
üìÅ Controllers/AccountController.cs
Copy code
Csharp
using System.Web.Mvc;
using AlwayzzzFresh.Models;

namespace AlwayzzzFresh.Controllers
{
    public class AccountController : Controller
    {
        private User LoggedUser()
        {
            return new User
            {
                Name = "Anurag Jadhav",
                Email = "anurag@gmail.com"
            };
        }

        public ActionResult MyAccount()
        {
            return View(LoggedUser());
        }

        public ActionResult MyBasket()
        {
            return View(LoggedUser());
        }

        public ActionResult MyOrders()
        {
            return View(LoggedUser());
        }

        public ActionResult MyWallet()
        {
            return View(LoggedUser());
        }

        public ActionResult ContactUs()
        {
            return View();
        }

        public ActionResult Logout()
        {
            return RedirectToAction("Index", "Home");
        }
    }
}
3Ô∏è‚É£ LAYOUT (PROFILE LOGO + DROPDOWN)
üìÅ Views/Shared/_Layout.cshtml
Copy code
Html
<!DOCTYPE html>
<html>
<head>
    <title>AlwayzzzFresh</title>
    <style>
        .profile-icon {
            width: 40px;
            cursor: pointer;
        }

        .dropdown {
            position: absolute;
            right: 20px;
            top: 60px;
            background: #222;
            color: white;
            width: 200px;
            display: none;
            border-radius: 8px;
            padding: 10px;
        }

        .dropdown a {
            display: block;
            color: white;
            text-decoration: none;
            padding: 8px;
        }

        .dropdown a:hover {
            background: #333;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <!-- Profile Icon -->
    <div style="position:absolute; right:20px; top:10px;">
        <img src="~/Content/profile.png" class="profile-icon" onclick="toggleMenu()" />

        <div id="menu" class="dropdown">
            <a href="/Account/MyAccount">My Account</a>
            <a href="/Account/MyBasket">My Basket</a>
            <a href="/Account/MyOrders">My Orders</a>
            <a href="/Account/MyWallet">My Wallet</a>
            <a href="/Account/ContactUs">Contact Us</a>
            <a href="/Account/Logout">Logout</a>
        </div>
    </div>

    @RenderBody()

    <script>
        function toggleMenu() {
            var menu = document.getElementById("menu");
            menu.style.display = menu.style.display === "block" ? "none" : "block";
        }
    </script>
</body>
</html>
