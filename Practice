CartController.cs
using Microsoft.AspNetCore.Mvc;
using mvc.Models;

namespace mvc.Controllers
{
    public class CartController : Controller
    {
        private static List<CartItem> _cart = new List<CartItem>();

        public IActionResult MyCart()
        {
            return View(_cart);
        }

        [HttpPost]
        [IgnoreAntiforgeryToken]
        public IActionResult AddToCart(int id, string name, string quantity, decimal price)
        {
            var existing = _cart.FirstOrDefault(c => c.Id == id);
            if (existing != null)
            {
                existing.Count++;
            }
            else
            {
                _cart.Add(new CartItem
                {
                    Id = id,
                    Name = name,
                    Quantity = quantity,
                    Price = price,
                    Count = 1
                });
            }
            return Ok();
        }
    }
}
HomeController.cs
using System.Diagnostics;
using Microsoft.AspNetCore.Mvc;
using mvc.Models;

namespace mvc.Controllers
{
    public class HomeController : Controller
    {
        public IActionResult Index()
        {
            return View();
        }

        public IActionResult Privacy()
        {
            return View();
        }

        [ResponseCache(Duration = 0, Location = ResponseCacheLocation.None, NoStore = true)]
        public IActionResult Error()
        {
            return View(new ErrorViewModel { RequestId = Activity.Current?.Id ?? HttpContext.TraceIdentifier });
        }
    }
}
PaymentController.cs
using Microsoft.AspNetCore.Mvc;

namespace mvc.Controllers
{
    public class PaymentController : Controller
    {
        public IActionResult Checkout()
        {
            return View();
        }

        [HttpPost]
        [IgnoreAntiforgeryToken]
        public IActionResult Confirm(string method)
        {
            return RedirectToAction("Success");
        }

        public IActionResult Success()
        {
            return View();
        }
    }
}
ProductController.cs
using Microsoft.AspNetCore.Mvc;
using mvc.Models;

namespace mvc.Controllers
{
    public class ProductController : Controller
    {
        public IActionResult Shop()
        {
            var products = new List<Product>
            {
                new Product { Id = 1, Name = "Aavin Toned Milk", Quantity = "500 ml", Price = 20 },
                new Product { Id = 2, Name = "Hatsun Pouch Curd", Quantity = "500 g", Price = 38 }
            };

            return View(products);
        }
    }
}
Models/cartItem.cs
namespace mvc.Models
{
    public class CartItem
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Quantity { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public int Count { get; set; }
    }
}

Models/Product.cs
namespace mvc.Models
{
    public class Product
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Quantity { get; set; } = string.Empty;
        public decimal Price { get; set; }
    }
}

views/Cart/MyCart.cshtml
@model List<mvc.Models.CartItem>
@{
    var itemTotal = Model.Sum(i => i.Price * i.Count);
    var deliveryCharge = 25;
    var handlingCharge = 2;
    var smallCartCharge = 20;
    var grandTotal = itemTotal + deliveryCharge + handlingCharge + smallCartCharge;
}

