    <thead>
        <tr>
            <th>Profile</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>

<tbody>
@foreach (var c in Model)
{
    <tr>
        <td>
            <img src="https://randomuser.me/api/portraits/men/@c.CustomerId.jpg"
                 class="customer-img" />
        </td>
        <td>@c.Name</td>
        <td>@c.Email</td>
        <td>
            @if (c.Status == "ACTIVE")
            {
                <span class="badge badge-active">ACTIVE</span>
            }
            else
            {
                <span class="badge badge-inactive">INACTIVE</span>
            }
        </td>
        <td>
            <a asp-action="CustomerDetails" asp-route-id="@c.CustomerId" class="btn btn-sm btn-outline-info">
                <i class="bi bi-eye"></i>
            </a>
            <a asp-action="UpdateCustomer" asp-route-id="@c.CustomerId" class="btn btn-sm btn-outline-warning">
                <i class="bi bi-pencil"></i>
            </a>
        </td>
    </tr>
}
</tbody>
</table>
</div>
