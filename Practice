using Microsoft.AspNetCore.Mvc;
using AlwayzzzFresh.Models;
using System.Collections.Generic;

namespace AlwayzzzFresh.Controllers
{
    public class HomeController : Controller
    {
        public IActionResult Index()
        {
            var products = new List<Product>
            {
                new Product { Id=1, Name="Fresh Apples", Price=120, ImageUrl="/images/apple.png" },
                new Product { Id=2, Name="Milk Packet", Price=55, ImageUrl="/images/milk.png" },
                new Product { Id=3, Name="Bread", Price=40, ImageUrl="/images/bread.png" }
            };

            return View(products);
        }
    }
}
