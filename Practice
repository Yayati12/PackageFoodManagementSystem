<script>
    function removeEmail(el) {
        if(confirm("Are you sure you want to remove this alternate email?")) {
            const card = el.closest('.col-12');
            card.style.opacity = "0";
            card.style.transform = "translateX(20px)";
            setTimeout(() => card.remove(), 300);
        }
    }

    function addNewEmail() {
        const email = prompt("Enter your alternate email address:");
        if (email) {
            alert("Verification link sent to " + email);
        }
    }
</script>


