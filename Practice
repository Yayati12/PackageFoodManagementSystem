Copy code
Html
@model List<AlwayzzzFresh.Models.CartItem>

<h3>Your Cart ğŸ›’</h3>

@if (!Model.Any())
{
    <p>Cart is empty</p>
}
else
{
    <table class="table">
        <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Total</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>â‚¹@(item.Product.Price * item.Quantity)</td>
                <td>
                    <a href="/Cart/Add/@item.Product.Id" class="btn btn-success btn-sm">+</a>
                    <a href="/Cart/Remove/@item.Product.Id" class="btn btn-danger btn-sm">-</a>
                </td>
            </tr>
        }
    </table>

    <a href="/Order/Checkout" class="btn btn-success">
        Proceed to Payment
    </a>
}
