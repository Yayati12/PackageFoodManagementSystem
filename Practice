        height: 140px;
        object-fit: cover;
    }
</style>

<script>
    let currentTotal = 0;

    function toggleOrderSummary() {
        const overlay = document.getElementById('orderSummaryOverlay');
        overlay.classList.toggle('d-none');
    }

    function addItem(name, price) {
        currentTotal += price;
        updateDisplay();

        let cart = JSON.parse(localStorage.getItem("myCart")) || [];
        cart.push({ name: name, price: price, quantity: 1 });
        localStorage.setItem("myCart", JSON.stringify(cart));

        if(document.getElementById('orderSummaryOverlay').classList.contains('d-none')) {
            toggleOrderSummary();
        }
    }

    function addAllAndShow() {
        clearBasket(false);
        addItem('Amul Toned Milk', 54);
        addItem('Fresh Carrots', 40);
    }

    function updateDisplay() {
        document.getElementById('summary-subtotal').innerText = "₹" + currentTotal.toFixed(2);
        document.getElementById('summary-total').innerText = "₹" + currentTotal.toFixed(2);
    }

    function clearBasket(showConfirm = true) {
        if(!showConfirm || confirm("Clear your selection?")) {
            currentTotal = 0;
            localStorage.removeItem("myCart");
            updateDisplay();
            if(showConfirm) toggleOrderSummary();
        }
    }

    // Navigates to the Checkout Page
    function goToCheckout() {
        if (currentTotal > 0) {
            window.location.href = "/Payment/Checkout";
        } else {
            alert("Your basket is empty!");
        }
    }
</script>



_ViewImports.cshtml
@using PackageFoodManagementSystem.Application
@using PackageFoodManagementSystem.Application.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



appsettings.json
{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PackageFoodManagementSystem;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}



Program.cs
using Microsoft.EntityFrameworkCore;
using PackageFoodManagementSystem.Application.Models;

var builder = WebApplication.CreateBuilder(args);

// --- 1. ADD SERVICES (Before builder.Build()) ---

builder.Services.AddControllersWithViews();

// Move this HERE (above builder.Build)
builder.Services.AddDbContext<ApplicationDbContext>(options =>
    options.UseSqlServer(builder.Configuration.GetConnectionString("DefaultConnection")));

// --- 2. BUILD THE APP ---

var app = builder.Build();

// --- 3. CONFIGURE MIDDLEWARE (After builder.Build()) ---

if (!app.Environment.IsDevelopment())
{
    app.UseExceptionHandler("/Home/Error");
    app.UseHsts();
}

app.UseHttpsRedirection();
app.UseStaticFiles();
app.UseRouting();
app.UseAuthorization();

app.MapControllerRoute(
    name: "default",
    pattern: "{controller=Home}/{action=Welcome}/{id?}")
    .WithStaticAssets();

app.Run();



