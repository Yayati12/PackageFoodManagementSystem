namespace PackageFoodManagementSystem.Models
{
    public class Customer
    {
        public int CustomerId { get; set; }
        public string Name { get; set; }
        public string Email { get; set; }
        public string Phone { get; set; }
        public string Status { get; set; } // ACTIVE / INACTIVE
    }
}
2ï¸âƒ£ Service Layer (IMPORTANT)
ğŸ“„ Services/CustomerService.cs
Copy code
Csharp
using PackageFoodManagementSystem.Models;
using System.Collections.Generic;
using System.Linq;

namespace PackageFoodManagementSystem.Services
{
    public class CustomerService
    {
        private static List<Customer> customers = new List<Customer>()
        {
            new Customer{ CustomerId=1, Name="Anurag Jadhav", Email="anurag@gmail.com", Phone="9876543210", Status="ACTIVE"},
            new Customer{ CustomerId=2, Name="Rahul Patil", Email="rahul@gmail.com", Phone="9123456789", Status="INACTIVE"}
        };

        // ADD
        public void AddCustomer(Customer customer)
        {
            customer.CustomerId = customers.Count + 1;
            customers.Add(customer);
        }

        // GET ALL
        public List<Customer> GetAllCustomers()
        {
            return customers;
        }

        // GET BY ID
        public Customer GetCustomerDetails(int id)
        {
            return customers.FirstOrDefault(c => c.CustomerId == id);
        }

        // UPDATE
        public void UpdateCustomer(Customer customer)
        {
            var existing = customers.FirstOrDefault(c => c.CustomerId == customer.CustomerId);
            if (existing != null)
            {
                existing.Name = customer.Name;
                existing.Email = customer.Email;
                existing.Phone = customer.Phone;
                existing.Status = customer.Status;
            }
        }
    }
}
ğŸ—£ï¸ Viva line:
â€œCustomerService handles customer lifecycle operations.â€
3ï¸âƒ£ Controller
ğŸ“„ Controllers/CustomerController.cs
Copy code
Csharp
using Microsoft.AspNetCore.Mvc;
using PackageFoodManagementSystem.Models;
using PackageFoodManagementSystem.Services;

namespace PackageFoodManagementSystem.Controllers
{
    public class CustomerController : Controller
    {
        private CustomerService service = new CustomerService();

        // LIST
        public IActionResult CustomerList()
        {
            return View(service.GetAllCustomers());
        }

        // ADD
        [HttpGet]
        public IActionResult AddCustomer()
        {
            return View();
        }

        [HttpPost]
        public IActionResult AddCustomer(Customer customer)
        {
            service.AddCustomer(customer);
            return RedirectToAction("CustomerList");
        }

        // DETAILS
        public IActionResult CustomerDetails(int id)
        {
            return View(service.GetCustomerDetails(id));
        }

        // UPDATE
        [HttpGet]
        public IActionResult UpdateCustomer(int id)
        {
            return View(service.GetCustomerDetails(id));
        }

        [HttpPost]
        public IActionResult UpdateCustomer(Customer customer)
        {
            service.UpdateCustomer(customer);
            return RedirectToAction("CustomerList");
        }
    }
}
