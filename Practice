    localStorage.removeItem("myCart");

    // Immediately update the header badge to 0
    document.addEventListener("DOMContentLoaded", () => {
        const badge = document.getElementById("cart-count");
        if (badge) {
            badge.innerText = "0";
            badge.style.display = "none";
        }
    });
</script>


