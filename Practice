using Microsoft.AspNetCore.Mvc;

namespace PackageFoodManagementSystem.Application.Controllers
{
    public class AccountController : Controller
    {
        public IActionResult MyAccount()
        {
            return View();
        }

        public IActionResult MyBasket()
        {
            return View();
        }

        public IActionResult MyOrders()
        {
            return View();
        }

        public IActionResult MyWallet()
        {
            return View();
        }

        public IActionResult ContactUs()
        {
            return View();
        }

        public IActionResult Logout()
        {
            return RedirectToAction("Index", "Home");
        }
    }
}
âœ… STEP 4: LAYOUT WITH PROFILE LOGO + DROPDOWN (IMPORTANT)
ğŸ“ Views/Shared/_Layout.cshtml
Copy code
Html
<!DOCTYPE html>
<html>
<head>
    <title>AlwayzzzFresh</title>

    <style>
        .navbar {
            display: flex;
            justify-content: space-between;
            padding: 12px 20px;
            background: #f8f9fa;
        }

        .profile-icon {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            cursor: pointer;
        }

        .dropdown {
            position: absolute;
            right: 20px;
            top: 60px;
            background: #222;
            color: white;
            width: 200px;
            border-radius: 8px;
            display: none;
            z-index: 1000;
        }

        .dropdown a {
            display: block;
            padding: 10px;
            color: white;
            text-decoration: none;
        }

        .dropdown a:hover {
            background: #333;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <h3>AlwayzzzFresh</h3>

        <!-- PROFILE LOGO -->
        <div>
            <img src="~/images/profile.png"
                 class="profile-icon"
                 onclick="toggleMenu()" />

            <!-- DROPDOWN MENU -->
            <div id="profileMenu" class="dropdown">
                <a href="/Account/MyAccount">My Account</a>
                <a href="/Account/MyBasket">My Basket</a>
                <a href="/Account/MyOrders">My Orders</a>
                <a href="/Account/MyWallet">My Wallet</a>
                <a href="/Account/ContactUs">Contact Us</a>
                <a href="/Account/Logout" style="color:red">Logout</a>
            </div>
        </div>
    </div>

    <hr />

    @RenderBody()

    <script>
        function toggleMenu() {
            var menu = document.getElementById("profileMenu");
            menu.style.display = menu.style.display === "block" ? "none" : "block";
        }
    </script>

</body>
</html>
