using AlwaysFresh.Models;
using System.Collections.Generic;
using System.Web.Mvc;

namespace AlwaysFresh.Controllers
{
    public class HomeController : Controller
    {
        public ActionResult Index()
        {
            var menu = new List<MenuItem>
            {
                new MenuItem{Id=1,FoodName="Veg Thali",Price=120,ImageUrl="/Content/veg.jpg"},
                new MenuItem{Id=2,FoodName="Paneer Masala",Price=150,ImageUrl="/Content/paneer.jpg"},
                new MenuItem{Id=3,FoodName="Dal Rice",Price=100,ImageUrl="/Content/dal.jpg"}
            };
            return View(menu);
        }
    }
}
ğŸ“Œ Controllers/CartController.cs
Copy code
Csharp
using AlwaysFresh.Models;
using System.Collections.Generic;
using System.Linq;
using System.Web.Mvc;

namespace AlwaysFresh.Controllers
{
    public class CartController : Controller
    {
        static List<CartItem> cart = new List<CartItem>();

        public ActionResult Index()
        {
            return View(cart);
        }

        public ActionResult Add(int id, string name, int price)
        {
            var item = cart.FirstOrDefault(c => c.Item.Id == id);
            if (item == null)
            {
                cart.Add(new CartItem
                {
                    Item = new MenuItem { Id = id, FoodName = name, Price = price },
                    Quantity = 1
                });
            }
            else
            {
                item.Quantity++;
            }
            return RedirectToAction("Index");
        }
    }
}
