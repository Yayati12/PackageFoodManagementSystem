        position: absolute;
        top: 80px;
        right: -20px;
        width: 320px;
        background: white;
        border-radius: 20px;
        z-index: 1000;
        border: 1px solid rgba(0,0,0,0.05);
        animation: slideIn 0.3s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .btn-outline-success {
        border-radius: 12px;
        transition: 0.3s;
    }

        .btn-outline-success:hover {
            background: #198754;
            color: white;
        }

