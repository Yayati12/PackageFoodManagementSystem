style.css

/* =========================================================
   PFMS — Optimized CSS (Functionality Preserved)
   Sections: Base, Layout, Navbar, Sidebar/Dashboard,
   Hero (image band), Forms/Buttons, Tables, User Popup,
   Footer, Responsive
   ========================================================= */

/* ---------- Base Reset & Variables ---------- */
:root {
    --bg: #f7f7f7;
    --text: #1a1a1a;
    --muted: #4b5563;
    --brand: #2563eb;
    --brand-dark: #1e4fd1;
    --accent: #ff7a18;
    --danger: #dc2626;
    --success: #28a745;
    --white: #ffffff;
    --card: #ffffff;
    --border: #e5e7eb;
    --border-soft: #eee;
    --shadow: 0 10px 30px rgba(0,0,0,.08);
    --card-shadow: 0 1px 2px rgba(0,0,0,0.06);
    --radius-sm: 8px;
    --radius: 12px;
    --radius-lg: 14px;
    --sidebar-bg: #23303f;
    --sidebar-hover: #1e2835;
    --sidebar-text: #c6d1dc;
    --footer-bg: #1f1f1f;
    --footer-text: #ccc;
    /* If you rely on sticky header + fixed footer spacing */
    --nav-h: 64px;
    --footer-h: 60px;
}

*,
*::before,
*::after {
    box-sizing: border-box;
}

html, body {
    margin: 0;
    padding: 0;
    height: 100%;
    background: var(--bg);
    color: var(--text);
    font-family: 'Segoe UI', system-ui, -apple-system, Roboto, Arial, sans-serif;
    line-height: 1.6;
}

a {
    color: inherit;
    text-decoration: none;
}

    a:hover {
        color: var(--accent);
    }

.muted {
    color: var(--muted);
}

.mt {
    margin: .75rem 0;
}

input, select, textarea {
    width: 100%;
    padding: .65rem;
    border: 1px solid var(--border);
    border-radius: 10px;
    font: inherit;
}

    input:focus, select:focus, textarea:focus {
        outline: 2px solid #2563eb33;
        border-color: var(--brand);
    }

/* ---------- Global Layout Helpers ---------- */
.page-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

